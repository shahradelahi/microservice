{
  "name": "cronstack",
  "version": "0.2.1",
  "description": "Advanced cron job scheduler for Node.js",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "license": "MIT",
  "repository": "github:shahradelahi/node-cronstack",
  "homepage": "https://github.com/shahradelahi/node-cronstack#readme",
  "type": "module",
  "main": "dist/lib.cjs",
  "module": "dist/lib.js",
  "types": "dist",
  "bin": {
    "cronstack": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "default": "./dist/lib.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "mocha \"**/*.test.ts\"",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check . --ignore-path ../../.gitignore",
    "format": "prettier --write . --ignore-path ../../.gitignore",
    "prepublishOnly": "pnpm lint && pnpm format:check && pnpm build"
  },
  "dependencies": {
    "@se-oss/rand": "^1.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "cron": "^3.2.1",
    "cronstrue": "^2.52.0",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.5",
    "error-serializer": "^8.0.0",
    "esbuild": "^0.24.0",
    "execa": "^9.5.1",
    "fast-glob": "^3.3.2",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.8",
    "ora": "^8.1.1",
    "p-safe": "^1.0.0",
    "source-map-support": "^0.5.21",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.1",
    "@monorepo/eslint-config": "workspace:^",
    "@monorepo/prettier-config": "workspace:^",
    "@sindresorhus/tsconfig": "^6.0.0",
    "@types/chai": "^5.0.1",
    "@types/lodash": "^4.17.13",
    "@types/micromatch": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.9.1",
    "@types/source-map-support": "^0.5.10",
    "bundle-require": "^5.0.0",
    "chai": "^5.1.2",
    "mocha": "^11.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "type-fest": "^4.27.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "cron": "^3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org",
    "provenance": true
  },
  "prettier": "@monorepo/prettier-config"
}
