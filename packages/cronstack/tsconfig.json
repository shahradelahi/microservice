{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2022",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
