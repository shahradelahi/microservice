{
  "name": "@litehex/microservice",
  "description": "A minimal microservice framework for Node.js",
  "version": "0.1.0-alpha.14",
  "main": "dist/lib.cjs",
  "module": "dist/lib.js",
  "types": "dist/lib.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      }
    }
  },
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,md}\"",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm run format:check && pnpm run typecheck && pnpm run build"
  },
  "packageManager": "pnpm@8.11.0",
  "type": "module",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cron": "^3.1.6",
    "cronstrue": "^2.44.0",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "ora": "^7.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "type-fest": "^4.8.2",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "cron": "^3.1.6"
  },
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahradelahi/microservice.git"
  },
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  }
}
